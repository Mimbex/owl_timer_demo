<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl_timer_demo.TimerApp" owl="1">
        <div class="o_owl_timer_app d-flex flex-column align-items-center justify-content-center h-100 bg-100">
            <div class="card shadow-sm p-5 text-center" style="min-width: 300px;">
                <h1 class="display-4 mb-4 fw-bold text-primary">
                 <t t-esc="formattedTime"/>
                </h1>
                
                <div class="d-flex gap-2 justify-content-center">
                    <button class="btn btn-lg" 
                    t-on-click="toggleTimer"
                    t-att-class="state.isRunning ? 'btn-warning' : 'btn-success'"
                    >
                    <i t-att-class="state.isRunning ? 'fa fa-pause': 'fa fa-play'"/>
                        <span class="ms-2" t-esc="state.isRunning ? 'Pausar' : 'Iniciar'"/>
                    </button>
                    
                    <button class="btn btn-secondary btn-lg" 
                        t-on-click="resetTimer"
                        t-att-disabled="state.seconds === 0">
                        <i class="fa fa-refresh"/>
                        <span class="ms-2">Reset</span>
                    </button>
                </div>
            </div>
        </div>
    </t>
</templates>

